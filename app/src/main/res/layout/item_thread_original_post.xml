<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#2C2C2C"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Info -->
        <TextView
            android:id="@+id/nook_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="::LeagueOfLegends"
            android:textColor="#AFAFAF"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/author_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anonymous1701"
                android:textColor="#E0E0E0"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â· 12/Mar/25"
                android:textColor="#AFAFAF"
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Judul Thread -->
        <TextView
            android:id="@+id/thread_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="How Do I Deal With Zed?"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Gambar Postingan -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            android:src="@drawable/placeholder_post"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <!-- Isi Teks Postingan -->
        <TextView
            android:id="@+id/post_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="4dp"
            android:text="I swear, no matter what I do he just ults and one taps me. Even if I bought armor items, he still one shots me. Even when I bought hourglass, he just wait it out and one shot me anyway. Help :("
            android:textColor="#E0E0E0"
            android:textSize="14sp" />

        <!-- Footer (Jumlah Balasan) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end|center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_reply"
                app:tint="#AFAFAF" />

            <TextView
                android:id="@+id/reply_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45"
                android:textColor="#AFAFAF"
                android:textSize="14sp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
