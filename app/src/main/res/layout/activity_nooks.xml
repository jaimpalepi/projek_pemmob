<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2C"
    tools:context=".NooksActivity">

    <!-- AppBarLayout berfungsi sebagai container untuk semua elemen di bagian atas -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="?attr/colorSurface">

        <!-- CollapsingToolbarLayout sekarang hanya berisi banner dan toolbar -->
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="#363636"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar">

            <!-- Banner Gambar di Bagian Atas -->
            <ImageView
                android:id="@+id/nook_banner_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nook_image_view"
                app:layout_collapseMode="parallax"
                android:contentDescription="Nook Banner" />

            <!-- Toolbar untuk tombol close -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" >
                <ImageView
                    android:id="@+id/buttonClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close"
                    android:layout_gravity="end"
                    android:padding="16dp"
                    android:contentDescription="Close"
                    app:tint="@android:color/white" />
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <!-- Konten Header Nook (SEKARANG DI LUAR CollapsingToolbarLayout) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#363636"
            app:layout_scrollFlags="scroll"> <!-- Tambahkan scroll flag jika perlu -->

            <TextView
                android:id="@+id/nook_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="::AnimeMemes"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/online_indicator_shape" />

                <TextView
                    android:id="@+id/nook_online_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="33 online"
                    android:textColor="#CFCFCF"
                    android:textSize="14sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/nook_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="A space for yo bakas to share your unfunny anime memes"
                android:textColor="#CFCFCF"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Search dan Filter Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#363636"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxBackgroundColor="#4F4F4F"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintEnabled="false"
                app:startIconDrawable="@drawable/ic_search"
                app:startIconTint="#9E9E9E">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search ::AnimeMemes"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="#9E9E9E" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:layout_width="74dp"
                android:layout_height="71dp"
                android:layout_marginStart="16dp"
                android:contentDescription="Filter"
                android:src="@drawable/ic_filter"
                app:tint="@android:color/white" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Daftar Postingan -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/posts_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/main_layout" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
