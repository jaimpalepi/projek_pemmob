<?xml version="1.0" encoding="utf-8"?><com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#2C2C2C"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Info Balasan -->
        <TextView
            android:id="@+id/replying_to_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REPLYING TO: “I swear, no matt...” — Anonymous1701"
            android:textColor="#AFAFAF"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/author_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anonymous341"
                    android:textColor="#E0E0E0"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="· 51m"
                    android:textColor="#AFAFAF"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OP"
                android:background="@drawable/placeholder_post"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_toStartOf="@id/more_options"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/more_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:tint="#AFAFAF" />

        </RelativeLayout>

        <!-- Gambar Balasan -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/reply_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            android:src="@drawable/placeholder_post"
            tools:srcCompat="@tools:sample/avatars" />

        <!-- Teks Balasan -->
        <TextView
            android:id="@+id/reply_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="4dp"
            android:text="Wahh Waahhh wahhhh the Assassin role does what they're supposed to do best!! whaaahh wahhhhhhhh"
            android:textColor="#E0E0E0"
            android:textSize="14sp" />

        <!-- Footer (Jumlah Balasan) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end|center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_reply"
                app:tint="#AFAFAF" />

            <TextView
                android:id="@+id/reply_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45"
                android:textColor="#AFAFAF"
                android:textSize="14sp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
